<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorThird"
        tools:context=".HighScores">


    <Button
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.863" android:textColor="#0D47A1" android:textSize="30sp"/>
    <TextView
            android:text="HighScores!!!"
            android:layout_width="413dp"
            android:layout_height="45dp"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" android:background="#000000"
            android:textColor="#FFDE59" android:textAlignment="center" android:password="false"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="66dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/retuMaMeBtn" app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.034"/>
    <TextView
            android:layout_width="395dp"
            android:layout_height="184dp"
            android:id="@+id/playersText" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#FAD803"
            android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:clickable="true"
            android:textAlignment="center" android:textAllCaps="true" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.303"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playersInput"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.601" android:textSize="30sp"
            tools:ignore="UnknownId" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.145"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submitNameBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/retuMaMeBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Submit Name!" android:textSize="30sp" android:textColor="#004AAD"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.745"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/retuMaMeBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
            android:text="Return to Main Menu" android:textSize="30sp" android:textColor="#004AAD"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="@+id/playersText"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="117dp" app:srcCompat="@drawable/connectthreelogo"
            android:id="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
    />

</androidx.constraintlayout.widget.ConstraintLayout>