<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorThird"
        tools:context=".Login">

    <TextView
            android:text="Log In"
            android:textColor="#0D47A1"
            android:layout_width="326dp"
            android:layout_height="146dp"
            android:id="@+id/textView5"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" android:fontFamily="sans-serif"
            android:textSize="100sp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.256"/>
    <Button
            android:text="Enter "
            android:layout_width="332dp"
            android:layout_height="65dp"
            android:id="@+id/LogInBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" app:layout_constraintHorizontal_bias="0.493"
            android:textColor="#004AAD" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.724"/>
    <EditText
            android:layout_width="163dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/editUsername" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.488"
            android:password="true"/>
    <EditText
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editPassword"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.935" app:layout_constraintVertical_bias="0.594"
            android:password="true"/>
    <TextView
            android:text="Username:"
            android:layout_width="211dp"
            android:layout_height="54dp"
            android:id="@+id/textView7" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintVertical_bias="0.487" android:textSize="36sp"/>
    <TextView
            android:text="Password:"
            android:layout_width="211dp"
            android:layout_height="56dp"
            android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.588" android:textSize="36sp"/>
    <ImageView
            android:layout_width="403dp"
            android:layout_height="100dp" app:srcCompat="@drawable/connectthreelogo"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
    />
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/red"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.966"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/yellow"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.967"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>